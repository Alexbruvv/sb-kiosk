{
    "variables": {
      "GIT_VERSION": "",
      "SKIP_COMPRESSION": "false",
      "KIOSK_BRANCH": "main"
    },
    "builders": [{
      "type": "arm",
      "file_urls" : ["https://downloads.raspberrypi.org/raspios_oldstable_armhf/images/raspios_oldstable_armhf-2023-02-22/2023-02-21-raspios-buster-armhf.img.xz"],
      "file_checksum_url": "https://downloads.raspberrypi.org/raspios_oldstable_armhf/images/raspios_oldstable_armhf-2023-02-22/2023-02-21-raspios-buster-armhf.img.xz.sha256",
      "file_checksum_type": "sha256",
      "file_unarchive_cmd": ["xz", "--decompress", "$ARCHIVE_PATH"],
      "file_target_extension": "xz",
      "image_build_method": "resize",
      "image_path": "kiosk-{{user `GIT_VERSION`}}.img",
      "image_size": "6G",
      "image_type": "dos",
      "image_partitions": [
        {
          "name": "boot",
          "type": "c",
          "start_sector": "8192",
          "filesystem": "vfat",
          "size": "256M",
          "mountpoint": "/boot"
        },
        {
          "name": "root",
          "type": "83",
          "start_sector": "532480",
          "filesystem": "ext4",
          "size": "0",
          "mountpoint": "/"
        }
      ],
      "image_chroot_env": ["PATH=/usr/local/bin:/usr/local/sbin:/usr/bin:/usr/sbin:/bin:/sbin"],
      "qemu_binary_source_path": "/usr/bin/qemu-arm-static",
      "qemu_binary_destination_path": "/usr/bin/qemu-arm-static"
    }],
    "provisioners": [
      {
        "type": "file",
        "source": "./files/",
        "destination": "/tmp/packer"
      },
      {
        "type": "shell",
        "environment_vars": [
          "DEBIAN_FRONTEND=noninteractive",
          "KIOSK_BRANCH={{user `KIOSK_BRANCH`}}"
        ],
        "scripts": [
          "scripts/user.sh",
          "scripts/base.sh",
          "scripts/kiosk.sh",
          "scripts/autossh.sh",
          "scripts/cleanup.sh"
        ]
      }
    ],
    "post-processors": [
      {
        "type": "shell-local",
        "inline": [
          "if [ \"{{user `SKIP_COMPRESSION`}}\" != \"true\" ]; then",
          "xz -vT0 kiosk-{{user `GIT_VERSION`}}.img",
          "fi"
        ]
      }
    ]
  }